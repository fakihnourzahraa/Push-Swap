NAME    = push_swap.exe

SRC = ft_atoi.c ft_split.c helper_functions.c node_data.c push.c \
		reverse_rotate.c rotate.c sorting.c stack_conversion.c \
		stack_creation.c swap.c turk_two.c turk.c main.c

OBJ     = $(SRC:.c=.o)

CC      = gcc
CFLAGS  = -Wall -Wextra -Werror -g

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	del /Q *.o 2>nul || echo Object files cleaned

fclean: clean
	del /Q $(NAME) 2>nul || echo Executable cleaned

re: fclean all

.PHONY: all clean fclean re

# Remove the -g flag for release build
# gcc ft_atoi.c ft_split.c helper_functions.c node_data.c push.c reverse_rotate.c rotate.c sorting.c stack_conversion.c stack_creation.c swap.c turk_two.c turk.c main.c